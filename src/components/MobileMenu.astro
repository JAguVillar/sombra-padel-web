---
// components/MobileMenu.astro
const { isOpen } = Astro.props;
---

<div
  id="mobile-menu"
  class={`fixed top-[96px] left-0 right-0 h-[calc(100svh-96px)] w-full z-50 overflow-hidden bg-[var(--color-primary)] transition-transform duration-300 ease-in-out transform ${
    isOpen ? "translate-x-0" : "translate-x-full"
  } flex flex-col`}
>
  <nav
    class="flex flex-1 flex-col justify-center items-center space-y-12 text-3xl font-medium text-[var(--color-contrast)]"
    aria-label="Menú móvil"
  >
    <a href="#lugar-key">El lugar</a>
    <a href="#canchas-key">Nuestras canchas</a>
    <a href="#clases-key">Clases</a>
    <a href="#torneos-key">Torneos</a>
    <a href="#nosotros-key">Sobre nosotros</a>
  </nav>
</div>
